<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/clickButtonBlue"
        android:layout_width="81dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_bg_blue"
        android:padding="16dp"
        android:text="Blue"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clickButtonGreen" />

    <TextView
        android:id="@+id/clickButtonGreen"
        android:layout_width="81dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_bg_green"
        android:padding="16dp"
        android:text="Green"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clickButtonRed" />

    <TextView
        android:id="@+id/clickButtonRed"
        android:layout_width="81dp"
        android:layout_height="50dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/button_bg_red"
        android:padding="16dp"
        android:text="Red"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clickCountView"
        android:layout_width="168dp"
        android:layout_height="36dp"
        android:text="NotClickedYet"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/clickButtonGreen" />

</androidx.constraintlayout.widget.ConstraintLayout>